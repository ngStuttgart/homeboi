{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@homeboi/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@homeboi/shared/base64url": ["libs/shared/base64url/src/index.ts"],
      "@homeboi/shared/product-card": ["libs/shared/product-card/src/index.ts"],
      "@homeboi/shared/payment-duration-pipe": [
        "libs/shared/payment-duration-pipe/src/index.ts"
      ],
      "@homeboi/shared/header": ["libs/shared/header/src/index.ts"],
      "@homeboi/shared/product-type": ["libs/shared/product-type/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
